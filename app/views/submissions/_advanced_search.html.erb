<p>For more search options, use the <%= link_to_function "Advanced Search", "toggle_visibility('advanced-search')" %>.</p>
<div id = "advanced-search" style = 'display:none'>
	<fieldset>
		<% form_for :search, @search, :html => {:method => :get} do |f| %>
			<br />
			<%= f.label :user_first_name_or_user_last_name_or_user_nickname_contains, "Student Name" %>: <%= f.text_field :user_first_name_or_user_last_name_or_user_nickname_contains, :size => 20 %><br />
			<%= f.label :collection, "Collection" %> 
			<%= f.collection_select :collection_like, Submission::COLLECTIONS, :to_s, :titleize, :include_blank => true %><br />
			<%= f.label :created_at, "Date Range:"%><br /> 
			From <%= f.text_field :created_at_gte, :size => 12 %> to <%= f.text_field :created_at_lte, :size => 12 %><br />
			<br />
			Sort by name or collection or submission date<br />
			<%= f.submit "Advanced Search", :name => nil %><br />
			<br />
		<% end %>
	</fieldset>
</div>
<div class = "clear"></div>